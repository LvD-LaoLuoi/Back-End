<div class='mt-4'>
  <h3>Cập nhật khóa học</h3>
  <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='name'>Tên khóa học</label>
      <input type='text' value='{{course.name}}' id='name' name='name' class='form-control' />
    </div>

    <div class='form-group'>
      <label for='description'>Mô tả khóa học</label>
      <textarea id='description' name='description' class='form-control'>{{course.description}}</textarea>
    </div>

    <div class='form-group'>
      <label for='videoId'>Video ID</label>
      <input type='text' value='{{course.videoId}}' id='videoId' name='videoId' class='form-control' />
    </div>

    <div class='form-group'>
      <label for='level'>Trình Độ</label>
      <input type='text' value='{{course.level}}' id='level' name='level' class='form-control' />
    </div>

    <button type='submit' class='btn btn-primary'>Lưu lại</button>
  </form>
</div>